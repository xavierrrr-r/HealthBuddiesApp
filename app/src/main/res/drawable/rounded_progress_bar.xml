<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/clearBlue" /> <!-- Background color -->
            <corners android:radius="10dp" /> <!-- Radius for rounded corners -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="rectangle">
                <solid android:color="@color/yellow" /> <!-- Progress color -->
                <corners android:radius="10dp" /> <!-- Radius for rounded corners -->
            </shape>
        </clip>
    </item>
</layer-list>
